
 <% include ../../partials/header %>

 <h1><%= person.firstName %> <%= person.lastName %></h1>
    <h2>Location: <%= person.city %>,<%= person.state %> </h2>
    <h4>Career : <%= person.career %></h4>
    <img src="<%= person.image %>" class="ui medium image">

 <ul><i class="linkedin square icon"> </i><a href="/show/<%=person._id%>/social/linkedin">Add Linkedin</a>
 </ul>

 <ul><i class="facebook icon"> </i>
 <a href="/show/<%=person._id%>/social/facebook">Add facebook</a>
 </ul>

 <ul><i class="twitter icon"> </i>
 <a href="/show/<%=person._id%>/social/twitter">Add Twitter</a>
 </ul>

<%if (person.social.instagram.length === 0){%>

  <ul><i class="instagram icon"> </i><a href="/show/<%=person._id%>/social/instagram">Add Instagram</a>
    <form action="/show/<%= person._id %>/social/instagram" method="POST">
     <input type="text" name="instagram">
     <button>Done</button>
 </form>
   </ul>

<%}else{%>
  <!-- Below me is the delete icon -->
  <%person.social.instagram.forEach(function(insta){%>

    <ul><i class="instagram icon"> </i>
      <a href="<%=insta.instagram%>"> <%= insta.instagram %></a>
      <form action="/show/<%= person._id%>/social/instagram/delete?_method=DELETE" method="POST">
        <button style="display : inline" >Delete</button>
   </form>
     </ul>
     <%});%>



<%}%>







<!-- COMMENT SECTION BREAK POINT    -->

 <div class="ui comments">
  <h3 class="ui dividing header">Comments</h3>

<!--  Single Comment Below Me -->
  <div class="comment">
    <a class="avatar">
      <img src="/images/avatar/small/matt.jpg">
    </a>
    <div class="content">
      <a class="author">Matt</a>
      <div class="metadata">
        <span class="date">Today at 5:42PM</span>
      </div>
      <div class="text">
        How artistic!
      </div>
      <div class="actions">
        <a class="reply">Reply</a>
      </div>
    </div>
  </div>
<!--Single Comment Above Me-->


  <form class="ui reply form">
    <div class="field">
      <textarea></textarea>
    </div>
         <input type="text" placeholder="username">
<br><br>
    <div class="ui blue labeled submit icon button">
      <i class="icon edit"></i> Add Thoughts
    </div>
  </form>
</div>
